  <div class="border">
<% @goats.each do |goat| %>
    <h2>Name: <%= goat.name %></h2>
    <p>Price: <%= goat.price %></p>
    <p>Color: <%= goat.color %></p>
    <p>Personality: <%= goat.personality %></p>
    <p>Weight: <%= goat.weight %></p>
    <p>Age: <%= goat.age %></p>
<% end %>
  </div>

<div class="new_goat">
<h1>Add New Goat</h1>
<%= simple_form_for @goat do |f| %>
  <%= f.input :name %>
  <%= f.input :color %>
  <%= f.input :personality %>
  <%= f.input :weight %>
  <%= f.input :age %>
  <%= f.input :price %>
  <%= f.submit "Submit Goat", class: "btn btn-primary" %>
<% end %></div>
