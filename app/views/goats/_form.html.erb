<div class="new_goat">
<h1>Add New Goat</h1>
<%= simple_form_for goat, html: { class: "goat-form" } do |f| %>
  <%= f.input :name %>
  <%= f.input :color %>
  <%= f.input :personality %>
  <%= f.input :weight, label: "Weight (kilograms)" %>
  <%= f.input :age, label: "Age (years)" %>
  <%= f.input :price, label: "Rental price ($ per day)" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit Goat", class: "btn btn-primary" %>
<% end %></div>
