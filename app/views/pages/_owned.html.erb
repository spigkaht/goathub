<h2>My Owned Goats</h2>
<div class="goat-container">
  <% @goats_owned.each do |goat| %>
    <div class="card-goat">
      <% if goat.photo.attached? %>
        <%= cl_image_tag goat.photo.key, height: 400, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag "nogoat.jpg", alt: "No image available", height: 400, width: 400, crop: :fill %>
      <% end %>
      <div class="card-goat-infos">
        <h2>Name: <%= goat.name %></h2>
        <p>Price: <%= goat.price %></p>
        <p>Color: <%= goat.color %></p>
        <p>Personality: <%= goat.personality %></p>
        <p>Weight: <%= goat.weight %></p>
        <p>Age: <%= goat.age %></p>
        <%= link_to "Show me the Goat", goat_path(goat) %>
      </div>
    </div>
  <% end %>
</div>
